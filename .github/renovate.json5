{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "description": "Ignore Python version updates as it's managed by CI/runtime environment",
      "matchManagers": ["poetry"],
      "matchPackageNames": ["python"],
      "enabled": false
    }
  ]
}
